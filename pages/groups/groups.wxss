/* pages/groups/groups.wxss */

.container {
  padding-bottom: 180rpx; /* 为底部添加按钮区域留出空间 */
}

.page-title {
  font-size: 44rpx;
  font-weight: bold;
  padding: 20rpx 0 40rpx 12rpx;
  color: var(--text-color-primary);
}

.group-card {
  display: flex;
  align-items: center;
  padding: 30rpx;
}

.card-content {
  flex: 1;
  min-width: 0;
}

.card-title {
  position: relative; /* 为红点定位创建上下文 */
  display: inline-block; /* 确保宽度自适应内容 */
  padding-right: 20rpx; /* 为红点留出空间 */
  font-size: 32rpx;
  font-weight: 500;
  color: var(--text-color-primary);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.due-dot {
  position: absolute;
  top: 2px; /* 微调垂直位置 */
  right: 0;
  width: 16rpx;
  height: 16rpx;
  background-color: var(--danger-color);
  border-radius: 50%;
}

.card-stats {
  margin-top: 12rpx;
  font-size: 26rpx;
  color: var(--text-color-secondary);
}

.due-count {
  font-weight: bold;
  font-size: 28rpx;
  margin-right: 4rpx;
}

.due-count.due {
  color: var(--primary-color);
}

.total-count {
  font-size: 24rpx;
}

.card-actions {
  flex-shrink: 0;
  margin-left: 20rpx;
}

.delete-btn {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.delete-icon {
  width: 36rpx;
  height: 36rpx;
}

/* 添加分组 */
/* 添加分组 */
.add-group-form {
  position: fixed;
  z-index: 99; /* 提升渲染层级 */
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  padding: 20rpx 24rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  background-color: var(--card-background-color);
  border-top: 1rpx solid var(--separator-color);
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.03);
}

.input-wrapper {
  flex: 1;
  min-width: 0;
  margin-right: 20rpx;
}

.add-group-input {
  width: 100%;
  height: 80rpx;
  background-color: var(--background-color);
  border-radius: 40rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  border: none;
}

.btn-wrapper {
  position: relative; /* 创建定位上下文以包含子元素 */
  flex-shrink: 0;
  width: 180rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background-color: #007aff;
  transition: opacity 0.2s;
  /* Ensure children are clipped if they somehow overflow */
  overflow: hidden;
}

.btn-wrapper:active {
  opacity: 0.8;
}

.btn-text {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 28rpx;
  font-weight: 500;
  /* Make sure clicks go through the text to the button below */
  pointer-events: none; 
}

.add-group-btn {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  /* Make the button itself completely transparent */
  background-color: transparent;
  border: none;
  padding: 0;
}

.add-group-btn::after {
  border: none;
}


/* 空状态 */
.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
  opacity: 0.6;
}