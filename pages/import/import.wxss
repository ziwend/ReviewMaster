/* pages/import/import.wxss */

.import-container {
  min-height: 100vh;
  background: #f7f7f7;
  /* 不用flex，不用padding-bottom */
}

.page-title {
  font-size: 40rpx;
  font-weight: bold;
  text-align: center;
  padding: 40rpx 0;
  color: var(--text-color-primary);
}

.card {
  margin: 0 24rpx 32rpx;
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  flex: 1 1 auto;
  min-height: 0;
}

.card-header {
  margin-right: 24rpx;
  font-size: 30rpx;
  font-weight: bold;
  color: var(--text-color-primary);
}

.picker-display {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 90rpx;
  line-height: 90rpx;
  border: 1rpx solid var(--separator-color);
  border-radius: var(--border-radius);
  padding: 0 24rpx;
  font-size: 30rpx;
  color: var(--text-color-secondary);
  background-color: var(--card-background-color);
}

.picker-arrow {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.5;
}

.content-textarea {
  width: 100%;
  min-height: 300rpx;
  font-size: 28rpx;
  line-height: 1.6;
  padding: 20rpx;
  box-sizing: border-box;
  border: 1rpx solid var(--separator-color);
  border-radius: var(--border-radius);
  background-color: var(--background-color);
  resize: none;
  overflow: auto;
}

.import-progress {
  margin-top: 10rpx;
}

/* --- Button Styles --- */
.btn-wrapper {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 88rpx;
  border-radius: 44rpx;
  transition: opacity 0.2s;
  overflow: hidden;
  background: none;
}

.btn-wrapper:active {
  opacity: 0.8;
}

.btn-wrapper.disabled {
  opacity: 0.5;
  pointer-events: none;
  background: none !important;
}

.btn-wrapper.btn-primary {
  background-color: #007aff;
}

.btn-wrapper.btn-secondary {
  background-color: #f0f0f0;
}

.btn-text {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  pointer-events: none;
  background: none;
}

.btn-wrapper.btn-secondary .btn-text {
  color: #333;
  font-weight: normal;
}

.btn-action {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: transparent;
  border: none;
  padding: 0;
  background: none;
}

.btn-action::after {
  border: none;
}

/* --- Layout Specifics --- */
.bottom-actions {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 100;
  background: #fff;
  padding: 24rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  border-top: 1rpx solid var(--separator-color);
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.bottom-actions .btn-wrapper {
  width: 100%;
}

.row-flex {
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-grow: 0;
  min-height: unset;
  height: auto;
}

.flex-card {
  margin: 0 24rpx 32rpx;
  padding: 32rpx;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.03);
  /* 不用flex:1，不用min-height:0 */
}

.progress-bar {
  margin: 0 24rpx 16rpx;
  padding: 32rpx;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.03);
}