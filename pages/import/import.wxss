/* pages/import/import.wxss */

.import-container {
  padding-bottom: calc(240rpx + env(safe-area-inset-bottom)); /* 适配底部操作栏高度 */
}

.page-title {
  font-size: 40rpx;
  font-weight: bold;
  text-align: center;
  padding: 40rpx 0;
  color: var(--text-color-primary);
}

.card {
  margin: 0 24rpx 32rpx;
  padding: 32rpx;
}

.card-header {
  font-size: 30rpx;
  font-weight: bold;
  color: var(--text-color-primary);
  margin-bottom: 24rpx;
}

.picker-display {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 90rpx;
  line-height: 90rpx;
  border: 1rpx solid var(--separator-color);
  border-radius: var(--border-radius);
  padding: 0 24rpx;
  font-size: 30rpx;
  color: var(--text-color-secondary);
  background-color: var(--card-background-color);
}

.picker-arrow {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.5;
}

.content-textarea {
  width: 100%;
  height: 320rpx;
  font-size: 28rpx;
  line-height: 1.6;
  padding: 20rpx;
  box-sizing: border-box;
  border: 1rpx solid var(--separator-color);
  border-radius: var(--border-radius);
  background-color: var(--background-color);
}

.import-progress {
  margin-top: 10rpx;
}

/* --- Button Styles --- */
.btn-wrapper {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 88rpx;
  border-radius: 44rpx;
  transition: opacity 0.2s;
  overflow: hidden;
}

.btn-wrapper:active {
  opacity: 0.8;
}

.btn-wrapper.disabled {
  opacity: 0.5;
  pointer-events: none;
}

.btn-wrapper.btn-primary {
  background-color: #007aff;
}

.btn-wrapper.btn-secondary {
  background-color: #f0f0f0;
}

.btn-text {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  pointer-events: none;
}

.btn-wrapper.btn-secondary .btn-text {
  color: #333;
  font-weight: normal;
}

.btn-action {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: transparent;
  border: none;
  padding: 0;
}

.btn-action::after {
  border: none;
}

/* --- Layout Specifics --- */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  background-color: var(--background-color);
  border-top: 1rpx solid var(--separator-color);
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  z-index: 10;
}

.bottom-actions .btn-wrapper {
  width: 100%;
}