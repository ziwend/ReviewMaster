/* pages/review/review.wxss */
.review-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
}

.review-card {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  min-height: 60vh; /* 确保卡片有足够高度 */
}

/* 合并问题文本样式 */
.question-text, .only-question {
  font-size: 48rpx;
  font-weight: 500;
  color: var(--text-color-primary);
  line-height: 1.6;
  white-space: pre-wrap;
  width: 100%;
  box-sizing: border-box;
}

.only-question {
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  flex: 1; /* 充满剩余空间 */
}

.answer-section {
  flex: 1;
  min-height: 0;
  margin-top: 10rpx;
  opacity: 0;
  overflow: hidden;
  transition: opacity 0.4s ease-out;
  display: flex;
  flex-direction: column;
}

.answer-section.show {
  opacity: 1;
}

.separator {
  width: 80rpx;
  height: 4rpx;
  background-color: var(--separator-color);
  margin: 0 auto 30rpx;
}

.answer-text {
  font-size: 36rpx;
  color: var(--primary-color);
  line-height: 1.5;
  white-space: pre-wrap;
  flex: 1;
  overflow: auto;
}

.action-buttons {
  display: flex;
  gap: 24rpx;
  padding: 0 24rpx;
  margin-bottom: 40rpx;
}

.action-buttons:empty {
  padding: 0;
  margin-bottom: 0;
}

/* 精简按钮样式 */
.btn-common {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 88rpx;
  border-radius: 44rpx;
  transition: opacity 0.2s;
  flex: 1;
}

.btn-common:active {
  opacity: 0.8;
}

.btn-primary {
  background-color: #007aff;
}

.btn-danger {
  background-color: #fa5151;
}

.btn-delete {
  background-color: #888;
}

.btn-warning {
  background-color: #ff9900;
}

.btn-text {
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
}

/* 优化空状态样式 */
.review-empty {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.empty-icon {
  width: 240rpx;
  height: 240rpx;
}

/* 为空状态下的按钮添加特定样式 */
.review-empty .btn-common {
  flex: none; /* 取消flex拉伸 */
  width: 320rpx;
  margin-top: 60rpx;
}

/* 状态栏优化 */
.stat-bar {
  background: #fafbfc;
  border-radius: 16rpx;
  padding: 24rpx 24rpx 12rpx;
}

.stat-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  color: #444;
  margin-bottom: 8rpx;
}

.gesture-guide-mask {
  position: absolute;
  left: 0; top: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.45);
  z-index: 99;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.gesture-guide-content-vertical {
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.45);
  border-radius: 0;
  padding: 0;
  text-align: center;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 48rpx;
  justify-content: center;
}
.gesture-guide-title {
  font-size: 36rpx;
  color: #fff;
  margin-bottom: 32rpx;
  font-weight: bold;
}
.gesture-guide-col-vertical {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx
}
.swipe-icon {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 16rpx;
}
.gesture-guide-desc {
  color: #fff;
  font-size: 28rpx;
  text-align: center;
}

.media-container {
  margin-top: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.media-image {
  width: 100%;
  max-height: 400rpx;
  border-radius: 16rpx;
  background-color: #f0f0f0;
}

.media-audio {
  width: 100%;
}
