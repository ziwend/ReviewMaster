/* pages/review/review.wxss */
.review-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
}

.page-title {
  font-size: 36rpx;
  color: #222;
  text-align: center;
  margin-bottom: 20rpx;
  letter-spacing: 2rpx;
}

.review-card {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: stretch;
  padding: 40rpx;
  margin-bottom: 40rpx;
}

.question-text {
  font-size: 48rpx;
  font-weight: 500;
  text-align: left;
  color: var(--text-color-primary);
  line-height: 1.6;
  white-space: pre-wrap;
}

.answer-section {
  flex: 1;
  min-height: 0;
  margin-top: 10rpx;
  opacity: 0;
  overflow: hidden;
  transition: max-height 0.4s ease-out, opacity 0.4s ease-out;
  display: flex;
  flex-direction: column;
}

.answer-section.show {
  opacity: 1;
  overflow: visible;
}

.separator {
  width: 80rpx;
  height: 4rpx;
  background-color: var(--separator-color);
  margin: 0 auto 30rpx;
}

.answer-text {
  font-size: 36rpx;
  text-align: left;
  color: var(--primary-color);
  line-height: 1.5;
  white-space: pre-wrap;
  flex: 1;
  min-height: 0;
  overflow: auto;
}

.action-buttons {
  display: flex;
  gap: 24rpx;
  padding: 0 24rpx;
  margin-bottom: 40rpx;
}

/* --- Button Styles --- */
.btn-wrapper {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 88rpx;
  border-radius: 44rpx;
  transition: opacity 0.2s;
  overflow: hidden;
}

.btn-wrapper:active {
  opacity: 0.8;
}

.btn-wrapper.btn-primary {
  background-color: #007aff;
}

.btn-wrapper.btn-danger {
  background-color: #fa5151;
}

.btn-wrapper.btn-delete {
  background-color: #888;
}

.btn-text {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  pointer-events: none;
}

.btn-action {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: transparent;
  border: none;
  padding: 0;
}

.btn-action::after {
  border: none;
}

/* --- Layout Specifics --- */
.action-buttons .btn-wrapper {
  flex: 1;
}

.next-btn.btn-wrapper {
  width: 100%;
}

/* 空状态 */
.review-empty {
  flex: 1;
  justify-content: center;
}

.empty-icon {
  width: 240rpx;
  height: 240rpx;
}

.mastered-list-btn.btn-wrapper {
  margin-top: 60rpx;
  width: 320rpx;
}

/* 底部导航 */
.bottom-nav {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: calc(100rpx + env(safe-area-inset-bottom));
  padding-bottom: env(safe-area-inset-bottom);
  background-color: var(--card-background-color);
  border-top: 1rpx solid var(--separator-color);
  font-size: 24rpx;
  color: var(--text-color-secondary);
}

.nav-item {
  padding: 20rpx;
}

.stat-info {
  margin-bottom: 16rpx;
  text-align: left;
  font-size: 26rpx;
  color: var(--text-color-secondary);
}

.only-question {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 48rpx;
  font-weight: 500;
  text-align: center;
  color: var(--text-color-primary);
  line-height: 1.6;
  white-space: pre-wrap;
}

.stat-bar {
  background: #fafbfc;
  border-radius: 16rpx;
  padding: 24rpx 24rpx 12rpx 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.03);
}

.stat-row.main-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  color: #444;
  margin-bottom: 8rpx;
}

.memory-strength-label-inline {
  color: #06d6a0;
  font-weight: bold;
  margin-left: 16rpx;
}

.memory-indicator-bar {
  position: relative;
  height: 24rpx;
  background: #f0f0f0;
  border-radius: 12rpx;
  overflow: hidden;
  margin-bottom: 8rpx;
}

.memory-strength-bar {
  height: 100%;
  border-radius: 12rpx;
  background: linear-gradient(90deg, #ff6b6b 0%, #ffd166 50%, #06d6a0 100%);
  transition: width 0.5s ease;
}

