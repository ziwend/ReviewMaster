/* pages/review/review.wxss */
.review-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--text-color-secondary);
  text-align: center;
  padding: 20rpx 0;
}

.review-card {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 40rpx;
  margin-bottom: 40rpx;
}

.question-text {
  font-size: 48rpx;
  font-weight: 500;
  text-align: center;
  color: var(--text-color-primary);
  line-height: 1.6;
}

.answer-section {
  margin-top: 40rpx;
  max-height: 0;
  opacity: 0;
  overflow: hidden;
  transition: max-height 0.4s ease-out, opacity 0.4s ease-out;
}

.answer-section.show {
  max-height: 500rpx; /* 一个足够大的值 */
  opacity: 1;
}

.separator {
  width: 80rpx;
  height: 4rpx;
  background-color: var(--separator-color);
  margin: 0 auto 30rpx;
}

.answer-text {
  font-size: 36rpx;
  text-align: center;
  color: var(--primary-color);
  line-height: 1.5;
}

.action-buttons {
  display: flex;
  gap: 24rpx;
  padding: 0 24rpx;
  margin-bottom: 40rpx;
}

/* --- Button Styles --- */
.btn-wrapper {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 88rpx;
  border-radius: 44rpx;
  transition: opacity 0.2s;
  overflow: hidden;
}

.btn-wrapper:active {
  opacity: 0.8;
}

.btn-wrapper.btn-primary {
  background-color: #007aff;
}

.btn-wrapper.btn-danger {
  background-color: #fa5151;
}

.btn-text {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  pointer-events: none;
}

.btn-action {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: transparent;
  border: none;
  padding: 0;
}

.btn-action::after {
  border: none;
}

/* --- Layout Specifics --- */
.action-buttons .btn-wrapper {
  flex: 1;
}

.next-btn.btn-wrapper {
  width: 100%;
}

/* 空状态 */
.review-empty {
  flex: 1;
  justify-content: center;
}

.empty-icon {
  width: 240rpx;
  height: 240rpx;
}

.mastered-list-btn.btn-wrapper {
  margin-top: 60rpx;
  width: 320rpx;
}

/* 底部导航 */
.bottom-nav {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: calc(100rpx + env(safe-area-inset-bottom));
  padding-bottom: env(safe-area-inset-bottom);
  background-color: var(--card-background-color);
  border-top: 1rpx solid var(--separator-color);
  font-size: 24rpx;
  color: var(--text-color-secondary);
}

.nav-item {
  padding: 20rpx;
}
