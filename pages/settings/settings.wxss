.container {
  padding: 32rpx;
  background-color: #f7f7f7;
  min-height: 100vh;
  box-sizing: border-box;
}

.setting-group {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 0 32rpx;
  margin-bottom: 32rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.setting-group-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  padding: 32rpx 0;
}

.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 0;
  border-top: 1rpx solid #f0f0f0;
}

.setting-label {
  font-size: 30rpx;
  color: #555;
}

.setting-input {
  text-align: right;
  font-size: 30rpx;
  color: #007aff;
  width: 150rpx;
}

.setting-desc {
  font-size: 24rpx;
  color: #999;
  padding: 16rpx 0 32rpx;
  border-top: 1rpx solid #f0f0f0;
}

.button-area {
  display: flex;
  gap: 24rpx;
  margin-top: 64rpx;
  padding: 0 16rpx;
}

.btn {
  flex: 1;
  font-weight: bold;
}

.btn-restore {
  background-color: #fff;
  color: #333;
  border: 1rpx solid #ddd;
}

.btn-save {
  background-color: #007aff;
  color: #fff;
} 